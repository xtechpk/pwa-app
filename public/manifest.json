  "shortcuts": [
    {
      "name": "Dashboard",
      "url": "/dashboard",
      "description": "Go directly to the dashboard"
    },
    {
      "name": "New Note",
      "url": "/new-note",
      "description": "Create a new note quickly"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+myapp",
      "url": "/?q=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".txt"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": [
        {
          "description": "Text files",
          "accept": [".txt", "text/plain"]
        }
      ]
    }
  ],
  "categories": ["productivity", "utilities"]
}